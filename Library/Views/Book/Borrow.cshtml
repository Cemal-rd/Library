@model Book
<h2>Borrow Book</h2>
@if (!Model.IsAvailable)
{
    <p>Please enter valid time range.</p>
}
else
{
    <form asp-action="Borrow" method="post">
        <div class="form-group">
            <label asp-for="Borrower">Your Name</label>
            <input asp-for="Borrower" class="form-control" />
            <span asp-validation-for="Borrower" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReturnDate">Return Date</label>
            <input asp-for="ReturnDate" class="form-control" type="date" />
            <span asp-validation-for="ReturnDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Borrow</button>
    </form>
}
@section Scripts {
    <script>
        // Borrow formunu submit etmeden önce alanların doğruluğunu kontrol eder
        $("form").submit(function () {
            var borrower = $("#Borrower").val();
            var returnDate = $("#ReturnDate").val();
            if (!borrower || !returnDate) {
                alert("Borrower name and return date cannot be empty.");
                return false;
            }
        });
    </script>
}